#Bedwars1058-RandomItems config
#Format '[type]::[material]::<display-name:true/false>::<lore-1>|<lore-2>::<tag:tag>::[min-max]'
#You can enter multiple group here
group-list:
- RandomItems
#Item that player can receive RANDOMIZELY
items-list:
  on-regularkill:
  - ITEM::IRON_INGOT::&fIron Ingot:false::null::null::20-30
  - ITEM::GOLD_INGOT::&eGold Ingot:false::null::null::20-30
  on-beddestroy:
  - IRON_INGOT:&fIron Ingot:20-30
  - GOLD_INGOT:&eGold Ingot:2-3
  on-generatorpickup:
  - IRON_INGOT:&fIron Ingot:20-30
  - GOLD_INGOT:&eGold Ingot:2-3
  on-finalkill:
  - IRON_INGOT:&fIron Ingot:20-30
  - GOLD_INGOT:&eGold Ingot:2-3
  on-shopbuy:
  - IRON_INGOT:&fIron Ingot:20-30
  - GOLD_INGOT:&eGold Ingot:2-3
  on-upgrade:
  - IRON_INGOT:&fIron Ingot:20-30
  - GOLD_INGOT:&eGold Ingot:2-3
#Available placeholder: {amount}, {display-name}, {player}, {enemy} (only for combat event!).
message:
  on-regularkill: '&aYou received x{amount} {display-name} &aby kill enemies!'
  on-beddestroy: '&aYou received x{amount} {display-name} &aby &c&lBed Destroying &aenemies!'
  on-generatorpickup: '&aYou received x{amount} {display-name} &aby collecting from generator!'
  on-finalkill: '&aYou received x{amount} {display-name} &aby &b&lFINAL KILL &aenemies!'
  on-shopbuy: '&aYou received x{amount} {display-name} &aby buying items!'
  on-upgrade: '&aYou received x{amount} {display-name} &aby &b&lUPGRADING!'
#The chance that player can get random items when event is called (in '%')
chance:
  on-regularkill: 60
  on-beddestroy: 100
  on-generatorpickup: 10
  on-finalkill: 100
  on-shopbuy: 10
  on-upgrade: 100
#The amount of items that player can get randomizely when event is called
amount:
  on-regularkill: 1
  on-beddestroy: 2
  on-generatorpickup: 1
  on-finalkill: 2
  on-shopbuy: 1
  on-upgrade: 2
#Decide will the player can get items when event is called
event:
  on-regularkill: true
  on-beddestroy: true
  on-generatorpickup: true
  on-finalkill: true
  on-shopbuy: true
  on-upgrade: true

